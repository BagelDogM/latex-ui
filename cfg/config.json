{
  "elements": {
    "point": {
      "bucket": "etc",
      "fields": {
        "title": {"type": "short-input"},
        "body": {"type": "textarea"}
      },
      "function": "\\point{$title}{$body}"
    },
    "place": {
      "bucket": "offers",
      "fields": {
        "title": {"type": "short-input"},
        "year-group": {"type": "short-input"},
        "body": {"type": "textarea"}
      },
      "function": "\\place{$title}{$year-group}{$body}"
    }
  },
  "buckets": {
    "etc": {
      "begin": "",
      "end": "",
      "persistent": true,
      "joiner": "\n"
    },
    "offers": {
      "begin": "\\begin{offers}",
      "end": "\\end{offers}",
      "persistent": false,
      "joiner": "\n"
    }
  },
  "document": {
    "template-source": "src/latex/template.tex",
    "write-location": "src/latex/tmp.tex",
    "compilation-command": "pdflatex -interaction=nonstopmode -shell-escape -output-directory=src/latex src/latex/tmp.tex",
    "document-location": "src/latex/tmp.pdf"
  }
}
